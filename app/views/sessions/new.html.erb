<%= form_tag 'login' do %>

  <div class="form-group row">
    <%= label :email, "Email:", class: "col-md-1 control-label" %>
    <div class="col-md-6">
      <%= text_field_tag :email%>
    </div>
  </div>

  <div class="form-group row">
    <%= label :password, "Password:", class: "col-md-1 control-label" %>
    <div class="col-md-6">
      <%= password_field_tag :password %>
    </div>
  </div>

  <%= submit_tag "Submit", class: "btn btn-default btn-primary" %>  
<% end %>